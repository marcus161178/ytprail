<h1>Listing images</h1>

<table class="table">
  <tr>
    <th>Image name</th>
    <th>Image url</th>
    <th>Frontslideshow</th>
    <th>Showguests</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%= image.image_name %></td>
    <td><%= image.image_url %></td>
    <td><%= image.frontslideshow %></td>
    <td><%= image.showguests %></td>
    <td><%= image.user.username %></td>
    <td><%= link_to 'Show', image %></td>
    <td><%= link_to 'Edit', edit_image_path(image) %></td>
    <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= will_paginate %>

<%= link_to 'New Image', new_image_path %>
